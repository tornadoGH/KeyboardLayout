<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="48dp"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="7" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="9" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="#" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="$" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="%" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="&amp;" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="*" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="/" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="-" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="+" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="(" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text=")" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="&gt;" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="&lt;" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="=" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text=":" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text=";" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="," />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="." />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="!" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="_" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:layout_weight="1"
                android:height="100dp"
                android:layout_margin="2dp"
                android:textSize="32sp"
                android:text="|" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:layout_weight="1"
            android:height="100dp"
            android:layout_margin="2dp"
            android:textSize="32sp"
            android:text="UP" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:layout_weight="1"
            android:height="100dp"
            android:layout_margin="2dp"
            android:textSize="32sp"
            android:text="lo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:layout_weight="1"
            android:height="100dp"
            android:layout_margin="2dp"
            android:textSize="32sp"
            android:text="Num" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:layout_weight="1"
            android:height="100dp"
            android:layout_margin="2dp"
            android:textSize="32sp"
            android:text="←" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:layout_weight="1"
            android:height="100dp"
            android:layout_margin="2dp"
            android:textSize="32sp"
            android:text="→" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:layout_weight="1"
            android:height="100dp"
            android:layout_margin="2dp"
            android:textSize="32sp"
            android:text="BS" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:layout_weight="1"
            android:height="100dp"
            android:layout_margin="2dp"
            android:textSize="32sp"
            android:text="Enter" />
    </LinearLayout>

</LinearLayout>
